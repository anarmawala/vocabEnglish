          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong" required><label for="wrong"><%= question[:answerW1] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW2] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW3] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="right"><label for="right"><%= question[:answerR] %></label><br>
        <% elsif order == 1 %>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong" required><label for="wrong"><%= question[:answerW1] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW2] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="right"><label for="right"><%= question[:answerR] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW3] %></label><br>
        <% elsif order == 2 %>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong" required><label for="wrong"><%= question[:answerW1] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="right"><label for="right"><%= question[:answerR] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW2] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW3] %></label><br>
        <% elsif order == 3 %>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="right"><label for="right"><%= question[:answerR] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong" required><label for="wrong"><%= question[:answerW1] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW2] %></label><br>
          <input type="radio" name="<%= $currentQs.index(question) %>" value="wrong"><label for="wrong"><%= question[:answerW3] %></label><br>
        <% end %>
      </fieldset>
    <% end %>
    <div class="input-group-button">
      <input type="submit" class="button" value="Submit">
    </div>
  </div>
</form>
