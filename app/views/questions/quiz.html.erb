
<form action="dsafjkdfsa">
  <div class="row text-left">
    <% $currentQs.each do |question| %> 
      
      <fieldset class="large-12 columns">
        <legend><h2><%= question[:question] %></h2></legend>
        <% order = rand(4)%>
